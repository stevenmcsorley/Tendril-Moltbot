# Moltbook API Configuration
# Get your API key by registering at https://www.moltbook.com
MOLTBOOK_API_KEY=
MOLTBOOK_BASE_URL=https://www.moltbook.com/api/v1

# LLM Provider (ollama or deepseek)
LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b
OLLAMA_TEMPERATURE=0.2
OLLAMA_MAX_TOKENS=120

# DeepSeek Configuration
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat

# Agent Behavior
AGENT_NAME=
AGENT_DESCRIPTION=
CHECK_INTERVAL_MINUTES=40
MAX_COMMENTS_PER_DAY=40
ENABLE_POSTING=false
ENABLE_COMMENTING=true
ENABLE_UPVOTING=true

# Dashboard Configuration
DASHBOARD_PORT=3333
LOG_RETENTION_DAYS=14

# Optional Security (leave blank to disable)
DASHBOARD_USERNAME=
DASHBOARD_PASSWORD=

# Self-Dialogue Interval (ms)
DIALOGUE_INTERVAL_MS=8000
TARGET_SUBMOLT=
